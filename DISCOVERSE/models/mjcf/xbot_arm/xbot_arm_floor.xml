<mujoco model="xbot_arm">
  
  <include file="../scene.xml"/>
  <include file="xbot_arm_options.xml"/>
  
  <worldbody>
    <!-- 放置机械臂 -->
    <body name="xbot_arm" pos="0 0 0">
      <include file="xbot_arm.xml"/>
    </body>
    
    <!-- 添加工作平台 -->
    <body name="table" pos="0 0 0">
      <geom size="0.5 0.5 0.02" pos="0 0 0.02" type="box" rgba="0.8 0.8 0.8 1" condim="4" solimp="2 1 0.01" solref="0.01 1" friction="1 0.005 0.0001"/>
      <geom size="0.02 0.02 0.25" pos=" 0.48  0.48 0.25" type="box" rgba="0.8 0.8 0.8 1"/>
      <geom size="0.02 0.02 0.25" pos="-0.48  0.48 0.25" type="box" rgba="0.8 0.8 0.8 1"/>
      <geom size="0.02 0.02 0.25" pos=" 0.48 -0.48 0.25" type="box" rgba="0.8 0.8 0.8 1"/>
      <geom size="0.02 0.02 0.25" pos="-0.48 -0.48 0.25" type="box" rgba="0.8 0.8 0.8 1"/>
    </body>
  </worldbody>
  
  <actuator>
    <include file="xbot_arm_control.xml"/>
  </actuator>
  
  <sensor>
    <!-- 关节位置传感器 -->
    <!-- <jointpos name="qpos_sensor" joint="arm_1_joint arm_2_joint arm_3_joint arm_4_joint arm_5_joint arm_6_joint"/> -->
    <jointpos name="qpos_sensor_1" joint="arm_1_joint"/>
    <jointpos name="qpos_sensor_2" joint="arm_2_joint"/>
    <jointpos name="qpos_sensor_3" joint="arm_3_joint"/>
    <jointpos name="qpos_sensor_4" joint="arm_4_joint"/>
    <jointpos name="qpos_sensor_5" joint="arm_5_joint"/>
    <jointpos name="qpos_sensor_6" joint="arm_6_joint"/>
    <!-- 关节速度传感器 -->
    <!-- <jointvel name="qvel_sensor" joint="arm_1_joint arm_2_joint arm_3_joint arm_4_joint arm_5_joint arm_6_joint"/> -->
    <jointvel name="qvel_sensor_1" joint="arm_1_joint"/>
    <jointvel name="qvel_sensor_2" joint="arm_2_joint"/>
    <jointvel name="qvel_sensor_3" joint="arm_3_joint"/>
    <jointvel name="qvel_sensor_4" joint="arm_4_joint"/>
    <jointvel name="qvel_sensor_5" joint="arm_5_joint"/>
    <jointvel name="qvel_sensor_6" joint="arm_6_joint"/>
    <!-- 末端位置和姿态传感器 -->
    <framepos name="end_effector_pos" objtype="site" objname="endpoint"/>
    <framequat name="end_effector_quat" objtype="site" objname="endpoint"/>
  </sensor>
  
  <keyframe>
    <key qpos="0 0 0 0 0 0 0 0"/>
  </keyframe>
</mujoco>